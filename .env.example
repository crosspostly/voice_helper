# Environment configuration for the linguistics service
# Copy this file to .env.local and update the values as needed

# Linguistics service API URL
# For development: http://localhost:8000
# For production: https://your-linguistics-service.com/api
VITE_LINGUISTICS_API_URL=http://localhost:8000

# Optional: Custom linguistics service timeout (in milliseconds)
VITE_LINGUISTICS_API_TIMEOUT=30000

# Optional: Enable mock service for development (set to 'true' to use mock)
VITE_LINGUISTICS_USE_MOCK=false

# Optional: Debug mode for linguistics service (set to 'true' for verbose logging)
VITE_LINGUISTICS_DEBUG=false